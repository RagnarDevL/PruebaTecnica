
@model IEnumerable<LiteThinkingPrueba.Models.Producto>
@{
    ViewData["Title"] = "Inventario";
}
<h2>Inventario</h2>

<table class="table">
    <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Empresa</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Codigo</td>
            <td>@item.Nombre</td>
            <td>@item.Precio</td>
            <td>@item.Empresa.Nombre</td>
        </tr>
    }
</table>

@using (Html.BeginForm("DownloadPDF", "Inventario", FormMethod.Post))
{
    <input type="submit" value="Descargar PDF" class="btn btn-primary" />
}

@using (Html.BeginForm("EnviarCorreo", "Inventario", FormMethod.Post))
{
    <div class="form-group">
        <label for="correo">Correo destinatario:</label>
        <input type="email" name="correo" class="form-control" required />
    </div>
    <input type="submit" value="Enviar PDF por correo" class="btn btn-success" />
}