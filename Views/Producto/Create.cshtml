@model Producto

<h2>Crear Producto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Producto</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Codigo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Codigo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Nombre)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Caracteristicas, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Caracteristicas)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.Precio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Precio)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Empresa, "Empresa", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmpresaNIT", null, "Seleccione Empresa", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}