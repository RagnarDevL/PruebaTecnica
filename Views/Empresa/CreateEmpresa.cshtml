@model Empresa

@{
    ViewData["Title"] = "Crear Nueva Empresa";
}

<!-- Estilos personalizados -->
<style>
    /* Estilo para la cabecera de la página */
    .page-header {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2.5rem;
        font-weight: bold;
        color: #343a40;
    }

    /* Estilo para el contenedor del formulario */
    .form-container {
        max-width: 800px;
        margin: 40px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Estilo para los campos del formulario */
    .form-group label {
        font-weight: bold;
        color: #555;
    }

    .form-group input {
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
    }

    /* Estilo para los mensajes de error */
    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Estilo para los botones */
    .btn-primary, .btn-secondary {
        font-size: 1.1rem;
        padding: 10px 20px;
        border-radius: 8px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Centrar los botones de acción */
    .action-buttons {
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="form-container">
    <!-- Título de la página -->
    <h2 class="page-header">Crear Nueva Empresa</h2>

    <!-- Muestra errores de validación si existen -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Formulario para crear una nueva empresa -->
    <form method="post" asp-action="CreateEmpresa">
        @Html.AntiForgeryToken()

        <!-- Campo NIT -->
        <div class="form-group mb-3">
            <label for="NIT">NIT</label>
            @Html.TextBoxFor(m => m.NIT, new { @class = "form-control", placeholder = "Ingrese el NIT de la empresa" })
            @Html.ValidationMessageFor(m => m.NIT, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Nombre de la Empresa -->
        <div class="form-group mb-3">
            <label for="Nombre">Nombre de la Empresa</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre de la empresa" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Dirección -->
        <div class="form-group mb-3">
            <label for="Direccion">Dirección</label>
            @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", placeholder = "Ingrese la dirección de la empresa" })
            @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Teléfono -->
        <div class="form-group mb-3">
            <label for="Telefono">Teléfono</label>
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "Ingrese el teléfono de la empresa" })
            @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
        </div>

        <!-- Botón para enviar el formulario -->
        <div class="action-buttons">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-building"></i> Crear Empresa
            </button>
        </div>

        <!-- Enlaces a otras acciones -->
        <div class="action-buttons mt-4">
            @Html.ActionLink("Ver Inventario", "Index", "Inventario", new { }, new { @class = "btn btn-secondary mx-2" })
            @Html.ActionLink("Crear Producto", "Create", "Producto", new { }, new { @class = "btn btn-secondary mx-2" })
        </div>
    </form>
</div>